@model DeliveryApp1.Models.OrderDetailModel

@{
    ViewBag.Title = "Summary";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css"  href="~/Content/SummaryStyleSheet.css" />
   
</head>
<body>
    <h4>Order Summary</h4>
    <div >

        <table class="table-bordered" >
            <tr>
                <td   >
                    <label> @Html.Label("Number of Itmes ")</label>
                </td>

                <td >
                   @Html.DisplayFor(model => model.ItemCount)
                </td>
            </tr>

            <tr>
                <td  >
                    <label>@Html.Label("Weight ")</label>
                </td>

                <td  >
                     @Html.DisplayFor(model => model.OrderWeight)
                </td>
            </tr>

            <tr>
                <td  >
                    @Html.Label("Receiver Address ")
                </td>

                <td  >
                    @Html.DisplayFor(model => model.ReceiverAddress)
                </td>
            </tr>

            <tr>
                <td  >
                    @Html.Label("Pickup Address ")
                </td>

                <td >
                    @Html.DisplayFor(model => model.PickupAddress)
                </td>
            </tr>

            <tr>
                <td  >
                    @Html.Label("Total Cost ")
                </td>

                <td  >
                    @Html.DisplayFor(model => model.Cost)
                </td>
            </tr>
        </table>

    </div>
    <div>
        @*<NewOrder> will be replaced with the controller name of new order team*@
        <button class="btn1" > @Html.ActionLink("Edit", "NewOrder", new { id = Model.OrderId }) </button> 
</div>
    <div><button class="btn"> @Html.ActionLink("Make Payment", "Payment", new { id = Model.Cost }) </button>
    </div>

</body>

